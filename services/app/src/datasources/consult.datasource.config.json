{
  "name": "Consult",
  "connector": "rest",
  "options": {
    "headers": {
      "content-type": "application/json"
    }
  },
  "operations": [
    {
      "template": {
        "method": "POST",
        "url": "http://relato-consult:6002/email/send",
        "body": {
          "database": "{database:string}",
          "only_payments": "{onlyPayments:string}"
        }
      },
      "functions": {
        "generate": ["database", "onlyPayments"]
      }
    },
    {
      "template": {
        "method": "GET",
        "url": "http://relato-consult:6002/consulta/{type:string}"
      },
      "functions": {
        "find": ["type"]
      }
    },
    {
      "template": {
        "headers": {
          "content-type": "text/plain"
        },
        "method": "POST",
        "url": "http://relato-consult:6002/relato/saveTitles",
        "body": "{body:string}"
      },
      "functions": {
        "saveTitles": ["body"]
      }
    }
  ]
}
